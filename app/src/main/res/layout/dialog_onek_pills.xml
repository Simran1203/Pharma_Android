<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/dummyLinear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="@drawable/square_bg"
            android:layout_margin="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:background="@drawable/square_bg">

            <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/wild_strawberry"
                android:textStyle="bold"
                android:textSize="@dimen/_25sdp"
                android:text="Purchase"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/pills"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imgRemove"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:src="@drawable/remove"/>

                    <ImageView
                        android:id="@+id/imgBackg"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/square_bg"
                        android:scaleType="fitXY"
                        android:layout_toRightOf="@id/imgRemove"/>

                    <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/dove_grey"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_toRightOf="@id/imgRemove"/>
                    <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                        android:id="@+id/txtQuantity"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/dove_grey"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="01"
                        android:layout_toRightOf="@id/imgRemove"/>

                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_toRightOf="@id/imgBackg"
                        android:src="@drawable/add"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:text="1000"
                        android:textColor="@color/dove_grey"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_weight="1"/>
            </LinearLayout>


            <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="$0.99"
                android:textColor="@color/dove_grey"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />

            <com.pharmacy.crack.utils.viewUtils.RegularTextView
                android:id="@+id/txtBuy1K"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="Buy"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/white"
                android:background="@drawable/btn_green"/>


        </LinearLayout>



        <ImageView
            android:id="@+id/imgClose1k"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"/>
    </RelativeLayout>



</LinearLayout>