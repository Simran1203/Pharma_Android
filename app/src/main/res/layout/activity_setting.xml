<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".main.view.mainActivities.SettingActivity">


        <LinearLayout
            android:id="@+id/layotTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingTop="@dimen/_40sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_arrow" />

            <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/wild_strawberry"
                android:text="@string/settings"
                android:textSize="@dimen/_30sdp" />

        </LinearLayout>


        <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:id="@+id/txtChangeProfile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Change Profile"
            android:background="@drawable/btn_yellow"/>

    <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:id="@+id/txtEmaiSupport"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Email Support"
            android:background="@drawable/btn_yellow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp">
        <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Push Notifications"
            android:background="@drawable/btn_yellow"/>

        <ToggleButton
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:background="@drawable/toggle_notification"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""/>
    </RelativeLayout>



    <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Tutorial"
            android:background="@drawable/btn_yellow"/>

    <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:text="terms &amp; Conditions"
            android:background="@drawable/btn_yellow"/>


</LinearLayout>