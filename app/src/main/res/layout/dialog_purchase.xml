<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:background="@drawable/square_bg"
            android:layout_margin="@dimen/_20sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/square_bg">

            <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/wild_strawberry"
                android:textStyle="bold"
                android:textSize="@dimen/_25sdp"
                android:text="Purchase"/>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_20sdp"
              android:orientation="horizontal">

              <RelativeLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1">
                  <ImageView
                      android:layout_width="@dimen/_60sdp"
                      android:layout_height="@dimen/_60sdp"
                      android:layout_centerHorizontal="true"
                      android:src="@drawable/fifty_fifty_big"/>
              </RelativeLayout>

              <RelativeLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:layout_weight="1">
                  <ImageView
                      android:id="@+id/imgRemove"
                      android:layout_width="@dimen/_25sdp"
                      android:layout_height="@dimen/_25sdp"
                      android:layout_marginRight="@dimen/_5sdp"
                      android:layout_marginTop="@dimen/_7sdp"
                      android:src="@drawable/remove"/>

                  <ImageView
                      android:id="@+id/imgBackg"
                      android:layout_width="@dimen/_50sdp"
                      android:layout_height="@dimen/_40sdp"
                      android:src="@drawable/square_bg"
                      android:scaleType="fitXY"
                      android:layout_toRightOf="@id/imgRemove"/>

                  <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                      android:layout_width="@dimen/_50sdp"
                      android:layout_height="@dimen/_40sdp"
                      android:textColor="@color/dove_grey"
                      android:textSize="@dimen/_20sdp"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:layout_toRightOf="@id/imgRemove"/>
                  <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                      android:id="@+id/txtQuantity"
                      android:layout_width="@dimen/_50sdp"
                      android:layout_height="@dimen/_40sdp"
                      android:textColor="@color/dove_grey"
                      android:textSize="@dimen/_20sdp"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="05"
                      android:layout_toRightOf="@id/imgRemove"/>

                  <ImageView
                      android:id="@+id/imgAdd"
                      android:layout_width="@dimen/_25sdp"
                      android:layout_height="@dimen/_25sdp"
                      android:layout_marginLeft="@dimen/_5sdp"
                      android:layout_marginTop="@dimen/_7sdp"
                      android:layout_toRightOf="@id/imgBackg"
                      android:src="@drawable/add"/>
              </RelativeLayout>

          </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pills"/>
                <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:textColor="@color/dove_grey"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="1250" />
            </LinearLayout>
            <com.pharmacy.crack.utils.viewUtils.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:gravity="center"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/white"
                android:background="@drawable/btn_green"/>


        </LinearLayout>



        <ImageView
            android:id="@+id/imgClosePurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"/>
    </RelativeLayout>



</LinearLayout>