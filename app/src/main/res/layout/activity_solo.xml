<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingTop="@dimen/_20sdp"
    android:paddingBottom="@dimen/_35sdp"
    tools:context=".main.view.GameActivities.SoloActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <com.pharmacy.crack.utils.viewUtils.RegularTextView
        android:id="@+id/txtDrugIq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR DRUG IQ"
        android:textColor="@color/solid_black"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDrugIq"
        app:srcCompat="@drawable/character_with_capsule" />

    <com.pharmacy.crack.utils.viewUtils.RegularTextView
       android:id="@+id/txtLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL 1"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/wild_strawberry"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />


    <com.pharmacy.crack.utils.viewUtils.RegularTextView
        android:id="@+id/txtStartGame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/_5sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/clay_creek"
        android:gravity="center"
        android:text="Start Game"
        android:background="@drawable/btn_default"/>


</androidx.constraintlayout.widget.ConstraintLayout>