<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/_35sdp"
    tools:context=".main.view.GotCategorySpinActivity">


    <LinearLayout
        android:id="@+id/linearGot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgGotNeuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/neurology_psychiatry_large" />

        <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:id="@+id/txtGot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="YOU GOT NEUROLOGY\nIN CATEGORY SPIN!"
            android:textColor="@color/wild_strawberry"
            android:textSize="@dimen/_22sdp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearStartUse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearGot"
        app:layout_constraintVertical_bias="0.8"
        android:paddingEnd="@dimen/_30sdp"
        android:paddingStart="@dimen/_30sdp"
        android:paddingBottom="@dimen/_20sdp"
        android:gravity="bottom">

        <com.pharmacy.crack.utils.viewUtils.RegularTextView
            android:id="@+id/txtstartGme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/btn_default"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Start Game"
            android:textColor="@color/clay_creek"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:id="@+id/linearUseSpin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@drawable/btn_default"
            android:gravity="center">


            <com.pharmacy.crack.utils.viewUtils.RegularTextView
                android:id="@+id/txtUseSpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="USE"
                android:textColor="@color/clay_creek"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/respin"/>

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>