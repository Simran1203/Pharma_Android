<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lose_bg"
    android:paddingTop="@dimen/_20sdp"
    tools:context=".main.view.LoseActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/txtGameOver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/infection"/>

    <com.pharmacy.crack.utils.viewUtils.RegularTextView
        android:id="@+id/txtGameOver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/_5sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/clay_creek"
        android:gravity="center"
        android:text="Game Over"
        android:background="@drawable/btn_default"/>


</androidx.constraintlayout.widget.ConstraintLayout>