<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_5sdp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cnstntImgData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:visibility="gone"
        android:background="@drawable/bonus_item_bg">
        <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:id="@+id/txtTitleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="1 Life"
            android:textColor="@color/rose_pink"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgDrug"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/heart"
            app:layout_constraintEnd_toEndOf="@id/txtTitleImage"
            app:layout_constraintStart_toStartOf="@id/txtTitleImage"
            app:layout_constraintTop_toBottomOf="@id/txtTitleImage" />


        <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:id="@+id/txtpills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="500 pills"
            android:textColor="@color/scorpion_grey"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/imgDrug"
            app:layout_constraintStart_toStartOf="@id/imgDrug"
            app:layout_constraintTop_toBottomOf="@id/imgDrug" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cnsntTextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bonus_item_bg"
        android:paddingBottom="@dimen/_15sdp">


        <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:id="@+id/txtDrugtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:gravity="center"
            android:text="Unlock\nAll\nCategories"
            android:textColor="@color/rose_pink"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
            android:id="@+id/txtpricetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="$4.99"
            android:textColor="@color/scorpion_grey"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/txtDrugtitle2"
            app:layout_constraintStart_toStartOf="@id/txtDrugtitle2"
            app:layout_constraintTop_toBottomOf="@id/txtDrugtitle2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
        android:id="@+id/txtHeadingBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Add Lives"
        android:textColor="@color/scorpion_grey"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />
</LinearLayout>

