<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:background="@drawable/square_bg"
            android:layout_margin="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/square_bg">


           <LinearLayout
               android:id="@+id/linearHeart"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="gone"
               android:gravity="center"
               android:orientation="horizontal">
               <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="- 1"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textSize="@dimen/_22sdp"
                   android:textColor="@color/solid_black"/>

               <ImageView
                   android:layout_marginStart="@dimen/_20sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/heart_big"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/linearpills"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/pills_big"/>

               <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/_20sdp"
                   android:text="- 250"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textSize="@dimen/_22sdp"
                   android:textColor="@color/clay_creek"/>


           </LinearLayout>

            <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                android:id="@+id/btnResumeIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/white"
                android:background="@drawable/btn_yellow"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/imgCloseResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"/>
    </RelativeLayout>



</LinearLayout>