<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:background="@drawable/square_bg"
            android:layout_margin="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/square_bg">

            <com.pharmacy.crack.utils.viewUtils.HardBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/scorpion_grey"
                android:textStyle="bold"
                android:textSize="@dimen/_25sdp"
                android:text="Purchase"/>

            <com.pharmacy.crack.utils.viewUtils.HardBoldTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wild_strawberry"
                android:textStyle="bold"
                android:textSize="@dimen/_25sdp"
                android:text="Unsuccessful!"/>

            <com.pharmacy.crack.utils.viewUtils.RegularTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dove_grey"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:text="No money was removed from\nyour account."/>


       <com.pharmacy.crack.utils.viewUtils.RegularTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ok"
           android:gravity="center"
           android:paddingBottom="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_50sdp"
           android:textColor="@color/white"
           android:background="@drawable/btn_green"/>
        </LinearLayout>



        <ImageView
            android:id="@+id/imgCloseUnsuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"/>
    </RelativeLayout>



</LinearLayout>