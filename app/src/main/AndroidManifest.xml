<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pharmacy.crack">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.PharmacyCrack"
        android:usesCleartextTraffic="true">
        <activity android:name=".main.view.PrivacyPolicyActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".main.view.loginSignUpActivity.ResetPasswordCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.mainActivities.IQMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.loginSignUpActivity.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.TermsConditionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.SettingActivities.TutorialScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.LandedCasseyCapsuleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.CategorySpinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.ReportQuestionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".main.view.GameResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.CongratulationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.IncorrectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.AnswerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.QuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.GotCategorySpinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.EndGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.rewardsActivity.SubmitQuestionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".main.view.ShareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.WinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.LoseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.GameActivities.TwoPlayerBattleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.GameActivities.SelectOpponentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
